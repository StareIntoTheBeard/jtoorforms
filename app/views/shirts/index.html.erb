<h1>Listing shirts</h1>

<table>
  <tr>
    <th>Customer Name</th>
    <th>Created At:</th>
  </tr>

<% @shirts.each do |shirt| %>
  <tr>
    <td><%= shirt.customer_name %></td>
    <td><%= shirt.created_at %> </td>
    <td><%= link_to 'View', shirt %></td>
    <td><%= link_to 'Edit', edit_shirt_path(shirt) %></td>
    <td><%= link_to 'Delete', shirt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Shirt', new_shirt_path %>
