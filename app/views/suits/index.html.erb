<h1>Listing suits</h1>

<table>
  <tr>
    <th>Customer Name</th>
    <th>Created At:</th>
  </tr>

<% @suits.each do |suit| %>
  <tr>
    <td><%= suit.customer_name %></td>
    <td><%= suit.created_at %> </td>
    <td><%= link_to 'View', suit %></td>
    <td><%= link_to 'Edit', edit_suit_path(suit) %></td>
    <td><%= link_to 'Delete', suit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Suit', new_suit_path %>
